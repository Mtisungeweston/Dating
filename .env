# Application Environment
APP_NAME=Friendizo
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost

# Database Connection
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3307
DB_DATABASE=friendizo_database
DB_USERNAME=root
DB_PASSWORD=your_password_here

# Mail Configuration (Optional, for sending email notifications)
MAIL_MAILER=smtp
MAIL_HOST=smtp.yourmailprovider.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your_email@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Session and Cache Configuration
SESSION_DRIVER=file
CACHE_DRIVER=file

# Security Keys (Optional, if using Laravel or similar frameworks)
APP_KEY=base64:random_generated_app_key
JWT_SECRET=your_jwt_secret_key

# Third-Party APIs (Optional)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
STRIPE_KEY=your_stripe_api_key
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret

# Miscellaneous (Optional)
LOG_CHANNEL=stack
QUEUE_CONNECTION=sync
